apiVersion: apps/v1
kind: Deployment
metadata:
 name: discoveryservicedeployment
spec:
 replicas: 1
 selector:
  matchLabels:
   appName: discoveryservice
 template:
  metadata:
   labels:
    appName: discoveryservice
  spec:
   containers:
    - name: discoveryservicepods
      image: gryffindor937/discoveryservicedeployment:1.0
      imagePullPolicy: Always
      ports:
       - containerPort: 8761
---

apiVersion: v1
kind: Service
metadata:
 name: fcservicelb
spec:
 selector:
  appName: fcservice
 ports:
  - port: 8761
    targetPort: 8761
 type: LoadBalancer