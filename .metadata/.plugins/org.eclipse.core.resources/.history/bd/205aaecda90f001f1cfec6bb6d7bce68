apiVersion: apps/v1
kind: Deployment
metadata:
 name: configurationservicedeployment
spec:
 replicas: 1
 selector:
  matchLabels:
   appName: configurationservice
 template:
  metadata:
   labels:
    appName: configurationservice
  spec:
   containers:
    - name: configurationservicepods
      image: gryffindor937/configurationservicedeployment:1.0
      imagePullPolicy: Always
      ports:
       - containerPort: 8762
---

apiVersion: v1
kind: Service
metadata:
 name: fcservicelb
spec:
 selector:
  appName: fcservice
 ports:
  - port: 8762
    targetPort: 8762
 type: LoadBalancer