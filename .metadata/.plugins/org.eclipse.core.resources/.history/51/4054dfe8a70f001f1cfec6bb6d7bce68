apiVersion: apps/v1
kind: Deployment
metadata:
 name: fcdeployment
spec:
 replicas: 1
 selector:
  matchLabels:
   appName: fcservice
 template:
  metadata:
   labels:
    appName: fcservice
  spec:
   containers:
    - name: fcservicepods
      image: gryffindor937/fcservice:latest
      imagePullPolicy: Always
      ports:
       - containerPort: 8099
---

apiVersion: v1
kind: Service
metadata:
 name: fcservicelb
spec:
 selector:
  appName: fcservice
 ports:
  - port: 8099
    targetPort: 8099
 type: LoadBalancer