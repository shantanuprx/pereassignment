package com.assignment.orderservice.controller;

import java.math.BigInteger;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestHeader;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.assignment.orderservice.dto.OrderDto;
import com.assignment.orderservice.service.OrderOperationService;

import jakarta.validation.Valid;

@RestController
public class AppController<T> {

	@Autowired
	private OrderOperationService<T> orderOperationService;
	
	@GetMapping("/fetch")
	public ResponseEntity<T> getDetaislsOfProduct(@RequestParam BigInteger orderId) {
		return orderOperationService.getDetails(orderId);
	}
	
	@GetMapping("/fetchAll")
	public ResponseEntity<T> getDetailsOfProduct(@RequestParam int pageNumber) {
		return orderOperationService.getDetails(pageNumber);
	}
	
	@PostMapping("/add")
	public ResponseEntity<T> addProduct(@Valid @RequestBody OrderDto request,  @RequestHeader String loggedInUser) {
		return orderOperationService.createOrder(request, loggedInUser);
	}
	
	@PutMapping("/update")
	public ResponseEntity<T> updateProduct(@Valid @RequestBody OrderDto request, @RequestHeader String loggedInUser) {
		return orderOperationService.updateOrder(request, loggedInUser);
	}
	
}
