---
apiVersion: apps/v1
kind: Deployment
metadata:
 name: redisdeployment
spec:
 replicas: 1
 selector:
  matchLabels:
   appName: redis
 template:
  metadata:
   labels:
    appName: redis
  spec:
   containers:
    - name: redispods
      image: redis:latest
      imagePullPolicy: Always
      ports:
       - containerPort: 6379
---

apiVersion: v1
kind: Service
metadata:
 name: elasticsearchlb
spec:
 selector:
  appName: elasticsearch
 ports:
  - port: 9200
    targetPort: 9200
 type: LoadBalancer